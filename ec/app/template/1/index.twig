{% extends 'default_frame.twig' %}

{% set body_class = 'front_page' %}

    {% block javascript %}
        <script>
            $(function(){
                $('.main_visual').slick({
                    dots: true,
                    arrows: false,
                    autoplay: true,
                    speed: 500
                });
            });
        </script>
    {% endblock %}

    {% block main %}
        <div class="row">

            <div class="main_visual col-xs-12">

                <div class="item">
                    <img src="{{ app.config.front_urlpath }}/img/top/main-visual-img/01.jpg">
                </div>

                <div class="item">
                    <img src="{{ app.config.front_urlpath }}/img/top/main-visual-img/02.jpg">
                </div>

            </div>

      </div>
  {% endblock %}
